<!DOCTYPE html>
<html>
    <head>
        <title>login</title>
    </head>
    <script>
        function check(){
            if(f.id.value==""){
                alert("아이디입력");
                return;
            }
            if(f.id.value==""){
                alert("비밀번호입력");
                return;
            }
            document.f.submit();
        }
    </script>
    <body>
        <div style="margin-left:20%"><h1>로그인 화면</h1></div>
        <form name="f" action="/login_ok" method="POST">
            <table align="center">
                <%
                if(idon){%>
                    <tr><td colspan="2">아이디 저장<input type="checkbox" name="idon" checked></td></tr>
                    <tr><td><input type="text" name="id" value="<%=idon%>"></td><td><input type="button" value="로그인" onclick="javascript:check();"></td></tr>
                <%}else{%>
                <tr><td colspan="2">아이디 저장<input type="checkbox" name="idon"></td></tr>
                <tr><td><input type="text" name="id"></td><td><input type="button" value="로그인" onclick="javascript:check();"></td></tr>
                <%}%>
                <tr><td><input type="password" name="password"></td><td><input type="button" value="회원가입" onclick="location.href='/member_insert'"></td></tr>
                <!-- <tr><td><input type="button" value="아이디찾기"></td><td><input type="button" value="비밀번호 찾기"></td></tr> -->
            </table>
        </form>

    </body>
</html>